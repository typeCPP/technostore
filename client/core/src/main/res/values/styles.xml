<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="black_style_roboto_text">
        <item name="android:fontFamily">@font/sans_serif_black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="confirm_code_edit_text">
        <item name="android:backgroundTint">@color/basic_color</item>
        <item name="android:backgroundTintMode">add</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:ems">1</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">40sp</item>
        <item name="android:inputType">number</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="inter_regular_style_text">
        <item name="android:fontFamily">@font/inter_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/light_color_text</item>
    </style>

    <style name="basic_text">
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="category_text_view">
        <item name="android:background">@drawable/category_filter_background</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingLeft">@dimen/space_2x</item>
        <item name="android:paddingRight">@dimen/space_2x</item>
        <item name="android:paddingTop">@dimen/space_05x</item>
        <item name="android:paddingBottom">@dimen/space_05x</item>
        <item name="android:textColor">@color/color_accent</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>

